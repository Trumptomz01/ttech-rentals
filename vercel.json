{
    "version": 2,
    "builds": [
      {
        "src": "index.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/index.html"
      },
      {
        "src": "/pages/(.*)",
        "dest": "/pages/$1"
      },
      {
        "src": "/src/css/(.*)",
        "dest": "/src/css/$1"
      },
      {
        "src": "/src/js/(.*)",
        "dest": "/src/js/$1"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      }
    ],
    "static": {
      "public": "public",
      "headers": [
        {
          "source": "/src/css/(.*)",
          "headers": [
            { "key": "Content-Type", "value": "text/css" }
          ]
        }
      ]
    }
  }
  